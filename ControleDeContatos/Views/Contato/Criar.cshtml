@{
    ViewData["Title"] = "Criar Contato";
}

<div>

        <h1 class="display-4 text-center">Cadastrar Contato</h1>

</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do Contato">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" placeholder="Digite o email do Contato">
    </div>
    <div class="form-group">
        <label for="contato">Contato</label>
        <input type="number" class="form-control" placeholder="Digite o celular do Contato">
    </div>
    <button type="submit" class="btn btn-primary w-100 my-3 ">Adicionar</button>
    <a class="btn btn-secondary btn w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

